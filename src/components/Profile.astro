<div
  id="profile"
  class="lg:w-2/4 lg:sticky top-20 flex flex-col items-center bg-floral_white-500"
>
  <div>
    <div
      class="w-40 h-40 mt-8 bg-gray-600 rounded-3xl overflow-hidden items-start animate-fade-right animate-duration-[2000ms]"
    >
      <img
        class="w-full h-full object-cover"
        src="./fotoPerfil2.webp"
        alt="foto perfil"
      />
    </div>
    <div class="mt-5">
      <h1 class="text-4xl font-rollestone" id="typing"></h1>
      <p>Ingeniero de Software Junior</p>
      <p>en Tarija, Bolivia.</p>
    </div>
  </div>
</div>
<script is:inline>
  const text = "Soy Mateo Zubieta";
  const typingElement = document.getElementById("typing");
  let index = 0;

  function type() {
    if (index < text.length) {
      typingElement.textContent += text.charAt(index);
      index++;
      setTimeout(type, 100); // Ajusta el tiempo de espera para la velocidad de tipeo
    }
  }

  type();
</script>
